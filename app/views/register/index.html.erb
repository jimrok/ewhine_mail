
<div class="wrap" style="text-align:center">
	<%if @error then%>
	<div class="notice error"><div class="content"><%=@error%></div></div>
	<%end%>
	<p style="margin-bottom:2em">请输入您邮箱<span><%=@email%></span>的密码</p>
	<form method="post" action="<%=url_for(:controller=>:register,:action=>:create)%>">
		<input type="hidden" name="email" value="<%=@email%>">
		<input type="password" style="width:80%;font-size:1em;border:none;-webkit-appearance: none;line-height:1.5em;font-size:1.5em"  name="password" placeholder="邮箱密码" >
		<div class="actions ">
			<input  class="btn-large" style="margin-left:0" type="submit" value="绑定"/>
		</div>
	</form>
</div>